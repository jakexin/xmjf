   <select id="queryBusAccountByUserId" resultMap="BaseResultMap">
      select <include refid="Base_Column_List"/>
      from bus_account
      where user_id=#{userId}
   </select>

  <select id="queryBusAccountInfoByUserId" resultType="map">
        select
           a.total "总资产",
           a.usable "可用金额",
           a.cash  "可提现金额",
           a.frozen "冻结金额",
           a.wait "代收本金",
           a.repay "代还金额",
           i.wait_income "代收利息"
        FROM
            bus_account a
        LEFT JOIN bus_income_stat i ON a.user_id = i.user_id
        WHERE
            a.user_id = #{userId}
  </select>

